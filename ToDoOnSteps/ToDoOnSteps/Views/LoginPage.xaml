<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoOnSteps.Views.LoginPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Grid VerticalOptions="CenterAndExpand">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Entry Placeholder="UserName" x:Name="EntryUser" Grid.Row="0"/>
                    <Entry Placeholder="Password" x:Name="EntryPassword" IsPassword="true" Grid.Row="1"/>
                    <Button Text="Login" Grid.Row="2" BackgroundColor="Black" TextColor="White" Clicked="Handle_Clicked_1"/>
                    <Button Text="Sign up" Grid.Row="3" Clicked="Handle_Clicked"/>
                </Grid>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>